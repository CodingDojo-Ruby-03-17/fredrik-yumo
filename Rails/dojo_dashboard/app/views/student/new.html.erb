<h1>Add New Student</h1>
<form action="/dojos/<%= @dojo.id %>/students" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>First Name:</label>
  <input type="text" name="student[first_name]">
  <label>Last Name:</label>
  <input type="text" name="student[last_name]">
  <label>Email Address:</label>
  <input type="text" name="student[email]">
  <label>Dojo:</label>
  <% if @all_dojos != nil %>
    <select name="student[dojo_id]">
      <% @all_dojos.each do |dojo| %>
        <% if dojo.id == @dojo.id %>
          <option value="<%= dojo.id %>" selected><%= dojo.branch %></option>
        <% else %>
          <option value="<%= dojo.id %>"><%= dojo.branch %></option>
        <% end %>
      <% end %>
    </select>
  <% end %>
  <input type="submit" value="Create">
</form>
<a href="/dojos">Home</a>
<div class="errors">
  <% if flash[:error] != nil %>
    <% flash[:error].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
</div>
