<% content_for :left do %>
  <h1>All Users</h1>
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Favorite Language</th>
      </tr>
    </thead>
    <% if @users != nil %>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.favorite_language %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
<% end %>
<% content_for :right do %>
  <h1>New User</h1>
  <form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group">
      <label>First Name</label>
      <input type="text" class="form-control" name="user[first_name]">
    </div>
    <div class="form-group">
      <label>Last Name</label>
      <input type="text" class="form-control" name="user[last_name]">
    </div>
    <div class="form-group">
      <label>Favorite Language</label>
      <input type="text" class="form-control" name="user[favorite_language]">
    </div>
    <input type="submit" class="btn btn-primary">
  </form>
  <a href="/posts" class="btn btn-info" role="button">All Posts</a>
  <% if flash[:error] != nil %>
    <% flash[:error].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
<% end %>
